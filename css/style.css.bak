.box {
	/* basics */
	background-color:white;
	color:black;
    text-align: center;
	border-style:solid;
	border-color:#848484;
	border-width:1px;
	border-bottom:0;

	/* rounded corners */
    -moz-background-clip: padding; -webkit-background-clip: padding-box; background-clip: padding-box;
    padding: .8em .8em .8em;
    width: 28em;
}

.box2 {
	/* basics */
	background-color:white;
